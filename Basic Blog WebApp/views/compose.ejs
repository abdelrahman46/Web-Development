<%- include("partials/header") -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="postTitle">Title</label>
    <input id="postTitle" type="text" name="postTitle" class="form-control" autocomplete="off">
  </div>

  <div class="form-group">
    <label for="postBody">Post</label>
    <textarea id="postBody" name="postBody" rows="6" class="form-control"></textarea>
  </div>

  <button type="submit" name="button" class="btn btn-primary">Publish</button>

</form>


<%- include("partials/footer") -%>
